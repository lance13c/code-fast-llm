{
  "compilerOptions": {
    "module": "ESNext", // Use ESNext for module syntax during development
    "target": "ES2022",
    "lib": ["ES2022"],
    "sourceMap": true,
    "rootDir": "src", // Ensure this is set to your source directory
    "outDir": "dist", // Output directory for compiled files
    "strict": true,
    "types": ["node", "vscode"], // Include node and vscode types
    "typeRoots": ["./node_modules/@types"],
    "moduleResolution": "node", // Ensure node module resolution
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/test/**/*"] // Exclude node_modules and test files
}
